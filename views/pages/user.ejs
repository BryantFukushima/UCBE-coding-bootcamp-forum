<!DOCTYPE html>
<html>

<head>
    <title> Welcome
        <%= user_info.user %>
    </title>
    <link rel="stylesheet" type="text/css" href="../assets/css/style.css">
</head>

<body>
    <div class="user-page">
        <div class="avatar">
            <h2>
				<%= user_info.avatar %>
					
			</h2>
        </div>
        <% if (log_user) { %>
        <form method="POST" action="/newavatar">
        	<input type="hidden" name="user_id" value="<%= user_info.id %>">
        	<input type="radio" name="avatar" value="2"> 2 <br>
        	<input type="radio" name="avatar" value="3"> 3 <br>
        	<button type="submit">submit</button>
        </form>
        <% } %>
        <h1><%= user_info.user %></h1>
        <h2><%= user_info.username %></h2>
        <h2><%= user_info.id %></h2>
    </div>
    <div class="user-post">
        <% for (var i in posts) { %>
            <div>
                <p>
                    <%= posts[i].title %>
                </p>
                <p>
                    <%= posts[i].category %>
                </p>
                <p>
                    <%= posts[i].post %>
                </p>
                <p>
                	<% if(posts[i].total) { %>
                    	<%= posts[i].total %>
                	<% } else { %>
                		0
                	<% } %>
                </p>
            </div>
            <% } %>
    </div>
    
</body>

</html>